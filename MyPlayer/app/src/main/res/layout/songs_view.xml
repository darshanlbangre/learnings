<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="56dp"
    android:clickable="true"
    android:background="@drawable/custom_backgroud"
    android:id="@+id/songs_container"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:text="Song Name"
        android:id="@+id/songName"
        android:textColor="#FAFAFA"
        android:textSize="16dp"
        android:maxLength="32"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/songImage"
        android:layout_toEndOf="@+id/songImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:textColor="#FAFAFA"
        android:textSize="15dp"
        android:id="@+id/songDuration"
        android:layout_below="@+id/songName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album"
        android:layout_marginLeft="16dp"
        android:maxLength="28"
        android:id="@+id/songAlbum"
        android:textColor="#FAFAFA"
        android:layout_alignBottom="@+id/songImage"
        android:layout_toRightOf="@+id/songImage"
        android:layout_toEndOf="@+id/songImage"
        android:layout_alignTop="@+id/songDuration" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/songImage"
        android:src="@android:drawable/ic_media_play"
        android:layout_alignBottom="@+id/songDuration"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"/>
</RelativeLayout>